<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Starting1Activity">

    <TextView
        android:id="@+id/text_first_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you looking to become more effective?"
        android:textColor="#070000"
        android:textSize="22sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="285dp"
        />

    <Button
        android:id="@+id/button_first_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes, I am!"
        android:textSize="18sp"
        android:background="@drawable/radius"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@+id/text_first_activity"
        android:layout_marginTop="75dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>